@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/magicxxTargets.cmake")

set_and_check(MAGICXX_INCLUDE_DIR
    "@PACKAGE_magicxx_INSTALL_INCLUDEDIR@"
)

set_and_check(MAGICXX_LIB_DIR
    "@PACKAGE_magicxx_INSTALL_LIBDIR@"
)

if (EXISTS "@PACKAGE_magicxx_INSTALL_DOCDIR@")
    set(MAGICXX_DOC_DIR
        "@PACKAGE_magicxx_INSTALL_DOCDIR@"
    )
else()
    set(MAGICXX_DOC_DIR
        ""
    )
endif()

set_and_check(MAGICXX_CMAKE_DIR
    "@PACKAGE_magicxx_CMAKE_INSTALL_LIBDIR@"
)

set_and_check(MAGICXX_DEFAULT_DATABASE_DIR
    "@PACKAGE_magicxx_DEFAULT_DATABASES_INSTALL_DIR@"
)

set(MAGICXX_FOUND
    TRUE
)

set(MAGICXX_VERSION
    @magicxx_VERSION@
)

check_required_components(magicxx)
